<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/supremeParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timeTextHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="test"
        android:textColor="@color/primaryText"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fpsAboutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeTextHolder"
        android:layout_centerHorizontal="true"
        android:alpha="0.87"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:textColor="@color/primaryText"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/fpsAboutText"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbar_compensation"
            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>