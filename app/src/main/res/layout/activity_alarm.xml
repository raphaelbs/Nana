<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.createlier.nana.nana.AlarmActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_extended"></include>


    <ImageButton
        android:id="@+id/button_add_pill"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentRight="true"
        android:layout_below="@id/app_bar"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-24dp"
        android:background="@drawable/circle"
        android:elevation="6dp"
        android:src="@mipmap/add_pill"
        android:stateListAnimator="@drawable/anim"
        android:title="@string/add_pill" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/alarm_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
